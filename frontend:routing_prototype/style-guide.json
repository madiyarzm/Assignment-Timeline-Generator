{
  "$schema": "https://design-tokens.org/schema.json",
  "meta": {
    "name": "ATG Registration Style Guide",
    "version": "0.1.0",
    "source": "Docs: MVP should feel simple, calm, not overwhelming; timeline/events shown in blue."
  },
  "brand": {
    "name": "Assignment Timeline Generator",
    "voice": {
      "tone": "calm, direct, student-friendly",
      "avoid": ["busy visuals", "heavy gradients", "overly playful UI"]
    }
  },
  "color": {
    "palette": {
      "primary": { "50": "#EEF5FF", "100": "#D9E9FF", "200": "#B3D4FF", "300": "#84BAFF", "400": "#569FFF", "500": "#2B87FF", "600": "#106DE6", "700": "#0A56B8", "800": "#083E86", "900": "#062B5D" },
      "neutral": { "0": "#FFFFFF", "50": "#FAFAFB", "100": "#F3F4F6", "200": "#E5E7EB", "300": "#D1D5DB", "400": "#9CA3AF", "500": "#6B7280", "600": "#4B5563", "700": "#374151", "800": "#1F2937", "900": "#111827" },
      "success": { "500": "#22C55E" },
      "warning": { "500": "#F59E0B" },
      "error":   { "500": "#EF4444" },
      "info":    { "500": "#0EA5E9" }
    },
    "roles": {
      "bg":          "{color.palette.neutral.50}",
      "surface":      "{color.palette.neutral.0}",
      "text":         "{color.palette.neutral.800}",
      "subtleText":   "{color.palette.neutral.500}",
      "primary":      "{color.palette.primary.600}",
      "primaryHover": "{color.palette.primary.700}",
      "inputBorder":  "{color.palette.neutral.300}",
      "inputFocus":   "{color.palette.primary.400}",
      "link":         "{color.palette.primary.600}"
    }
  },
  "typography": {
    "fontFamily": {
      "base": "-apple-system, system-ui, Segoe UI, Roboto, Inter, Helvetica, Arial, sans-serif",
      "mono": "ui-monospace, SFMono-Regular, Menlo, monospace"
    },
    "size": { "xs": "12px", "sm": "14px", "md": "16px", "lg": "18px", "xl": "24px", "2xl": "32px" },
    "weight": { "regular": 400, "medium": 500, "semibold": 600, "bold": 700 },
    "leading": { "tight": 1.2, "snug": 1.35, "normal": 1.5 }
  },
  "radius": { "sm": "8px", "md": "12px", "lg": "16px" },
  "shadow": {
    "sm": "0 1px 2px rgba(0,0,0,0.06)",
    "md": "0 4px 12px rgba(0,0,0,0.08)"
  },
  "spacing": { "0": "0px", "1": "4px", "2": "8px", "3": "12px", "4": "16px", "5": "20px", "6": "24px", "8": "32px" },
  "illustration": {
    "style": "flat, minimal, line + soft fills",
    "usage": "1 small, calm spot-illustration at top of registration; avoid busy scenes.",
    "colorGuide": {
      "strokes": "{color.palette.primary.600}",
      "fills": "{color.palette.primary.50}"
    }
  },
  "components": {
    "heading": {
      "h1": { "fontSize": "{typography.size.2xl}", "fontWeight": "{typography.weight.semibold}", "color": "{color.roles.text}", "lineHeight": "{typography.leading.snug}" },
      "h2": { "fontSize": "{typography.size.xl}", "fontWeight": "{typography.weight.semibold}", "color": "{color.roles.text}" }
    },
    "text": {
      "body": { "fontSize": "{typography.size.md}", "color": "{color.roles.text}", "lineHeight": "{typography.leading.normal}" },
      "muted": { "fontSize": "{typography.size.sm}", "color": "{color.roles.subtleText}" },
      "link": { "color": "{color.roles.link}", "decoration": "none", "hoverColor": "{color.palette.primary.700}" }
    },
    "input": {
      "height": "44px",
      "padding": "0 12px",
      "fontSize": "{typography.size.md}",
      "bg": "{color.roles.surface}",
      "borderColor": "{color.roles.inputBorder}",
      "radius": "{radius.sm}",
      "focus": { "borderColor": "{color.roles.inputFocus}", "outline": "2px solid {color.palette.primary.100}" }
    },
    "buttonPrimary": {
      "height": "44px",
      "padding": "0 16px",
      "fontSize": "{typography.size.md}",
      "radius": "{radius.md}",
      "bg": "{color.roles.primary}",
      "hoverBg": "{color.roles.primaryHover}",
      "textColor": "{color.palette.neutral.0}",
      "shadow": "{shadow.sm}"
    },
    "card": {
      "bg": "{color.roles.surface}",
      "radius": "{radius.lg}",
      "shadow": "{shadow.md}",
      "padding": "{spacing.6}"
    },
    "layout": {
      "pageBg": "{color.roles.bg}",
      "maxWidth": "420px",
      "gutter": "{spacing.6}",
      "sectionGap": "{spacing.6}"
    }
  }
}

